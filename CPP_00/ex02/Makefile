NAME	= Account
CFLAGS	= -Wall -Wextra -Werror -std=c++98
CC		= c++

SRC	= 	tests.cpp \
		Account.cpp

OBJ		= $(SRC:.cpp=.o)

# Colors
RESET = \033[0m
BOLD = \033[1m
RED = \033[91m
GREEN = \033[92m
# YELLOW = \033[33m
ORANGE = \033[93m
BLUE = \033[94m

all : $(NAME)

$(NAME): $(OBJ)
	@echo "$(BOLD)$(RED)   üõ†Ô∏è üöß      Compiling Account      üößüõ†Ô∏è$(RESET)"
	@echo "\n"
	@echo "$(BOLD)$(BLUE)-----------      -----------      -----------$(RESET)"
	@echo "\n"
	@$(CC) $(CFLAGS) $(OBJ) -o $(NAME)
	@echo "$(BOLD)$(GREEN) üìë‚òéÔ∏è üíæüéÜ     Account compiled     üéÜüíæ‚òéÔ∏è üìë $(RESET)"
	@echo "\n"

%.o: %.cpp
	@$(CC) $(CFLAGS) -c $< -o $@

clean:
	@rm -rf $(OBJ)
	@echo "$(BOLD)$(ORANGE)üßπüßº    .o files deleted    üßºüßπ$(RESET)"

fclean: clean
	@rm -rf $(NAME)
	@echo "$(BOLD)$(ORANGE)üßπüßº      exec deleted      üßºüßπ$(RESET)"

re: fclean all

.PHONY: all clean fclean re