NAME	= More_Forms
CFLAGS	= -Wall -Wextra -Werror -std=c++98 #-Wshadow -Wno-shadow
CC		= c++

SRC	= 	main.cpp \
		Bureaucrat.cpp \
		AForm.cpp \
		ShrubberyCreationForm.cpp \
		RobotomyRequestForm.cpp \
		PresidentialPardonForm.cpp \

OBJ		= $(SRC:.cpp=.o)

# Colors
RESET = \033[0m
BOLD = \033[1m
RED = \033[91m
GREEN = \033[92m
YELLOW = \033[33m
ORANGE = \033[93m
BLUE = \033[94m

all : $(NAME)

$(NAME): $(OBJ)
	@echo "$(BOLD)$(RED)     ğŸ› ï¸ ğŸš§      Compiling More_Forms      ğŸš§ğŸ› ï¸$(RESET)"
	@echo "\n"
	@echo "$(BOLD)$(BLUE)-----------      -----------      -----------$(RESET)"
	@echo "\n"
	@$(CC) $(CFLAGS) $(OBJ) -o $(NAME)
	@echo "$(BOLD)$(GREEN) ğŸŒ¸ğŸ’¾ğŸ†ğŸ—‚ï¸ ğŸ“‹     More_Forms compiled     ğŸ“‹ğŸ—‚ï¸ ğŸ†ğŸ’¾ğŸŒ¸ $(RESET)"
	@echo "\n"

%.o: %.cpp
	@$(CC) $(CFLAGS) -c $< -o $@

clean:
	@rm -rf $(OBJ)
	@echo "$(BOLD)$(ORANGE)ğŸ§¹ğŸ§¼    .o files deleted    ğŸ§¼ğŸ§¹$(RESET)"

fclean: clean
	@rm -rf $(NAME)
	@echo "$(BOLD)$(ORANGE)ğŸ§¹ğŸ§¼      exec deleted      ğŸ§¼ğŸ§¹$(RESET)"

re: fclean all

.PHONY: all clean fclean re